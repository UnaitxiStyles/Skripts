command /gm [<text>] [<player>]:
	description: Set Gamemode easier
	permission: gm.*
	aliases: gamemode
	trigger:
		if arg 1 is not set:
			send "&cPlease Select a Gamemode!"
		if arg 1 is "s" or "survival" or "0":
			if arg 2 is not set:
				send "&aYour Gamemode was set to &cSurvival"
				make player execute command "gamemode 0 "	
			if arg 2 is set:
				send "&a%arg 2%'s&a Gamemode has been set to &cSurvival"
				make player execute command "gamemode 0 %arg 2%"
		if arg 1 is "1" or "creative" or "c":
			if arg 2 is not set:
				send "&aYour Gamemode was set to &cCreative"
				make player execute command "gamemode 1 "
			if arg 2 is set:
				send "&a%arg 2%'s&a Gamemode has been set to &cCreative"
				make player execute command "gamemode 1 %arg 2%"
		if arg 1 is "2" or "adventure" or "a":
			if arg 2 is not set:
				send "&aYour Gamemode was set to &cAdventure"
				make player execute command "gamemode 2 "
			if arg 2 is set:
				send "&a%arg 2%'s&a Gamemode has been set to &cAdventure"
				make player execute command "gamemode 2 %arg 2%"
		if arg 1 is "3" or "spectator" or "s":
			if arg 2 is not set:
				send "&aYour Gamemode was set to &cSpectator"
				make player execute command "gamemode 3 "
			if arg 2 is set:
				send "&a%arg 2%'s&a Gamemode has been set to &cAdventure"
				make player execute command "gamemode 3 %arg 2%"
				
command /alert [<text>]:
	description: Broadcast News
	permission: *
	aliases: /a
	trigger:
		if arg 1 is not set:
			send "&c/alert (text)"
		if arg 1 is set:
			broadcast "[&4Alert&f] &e%arg 1%"
			
command /live [<text>]:
	broadcast: Broadcast Stream
	permission: *
	aliases: /stream
	trigger:
		if arg 1 is not set:
			send "&c/live (Server, Owner)"
		if arg 1 is "server":
			broadcast "[&4Alert&f] &cServer is on live: &ahttps://twitch.tv/servername"
		if arg 1 is "Owner":
			broadcast "[&4Alert&f] &c%player% is on live: &ahttps://twitch.tv/yourname"


options:
	logo: &8[&eCore&8]
	permission: vanish.use
	permissionalert: vanishalert.use
	
command /vanish [<offline player>]:
	description: Vanish
	permission: {@permission}
	permission message: &4You do not have access to this command!
	aliases: /v
	executable by: player
	trigger:
		if arg 1 is not set:
			if {vanish.%player%} is not set:
				hide the player from all players
				send "{@logo} &7You are &cVanish&7."
				set {vanish.%player%} to true
				loop all players:
					if loop-player has permission "{@permissionalert}":
						send "{@logo} &7The player &c%player% &7is now in vanish." to loop-player
			else:
				reveal the player from all players
				send "{@logo} &7You are no longer &cVanish&7."
				delete {vanish.%player%}
				loop all players:
					if loop-player has permission "{@permissionalert}":
						send "{@logo} &7The player &c%player% &7is no longer in vanish." to loop-player
		if arg 1 is set:
			if {vanish.%arg 1%} is not set:
				hide the arg 1 from all players
				send "{@logo} &7You are &cVanish&7." to arg 1
				send "{@logo} &7The player &c%arg 1% &7is now in vanish." to player
				set {vanish.%arg 1%} to true
				loop all players:
					if loop-player has permission "{@permissionalert}":
						send "{@logo} &7The player &c%arg 1% &7is now in vanish." to loop-player
			else:
				reveal the arg 1 from all players
				send "{@logo} &7You are no longer &cVanish&7." to arg 1
				send "{@logo} &7The player &c%arg 1% &7is no longer vanish." to player
				delete {vanish.%arg 1%}
				loop all players:
					if loop-player has permission "{@permissionalert}":
						send "{@logo} &7The player &c%arg 1% &7is no longer in vanish." to loop-player

on quit:	
	if {vanish.%player%} is set:
		delete {vanish.%player%}
on join:
 	loop all players:
		if {vanish.%loop-player%} is true:
		reveal the loop-player from all players
		hide the loop-player from all players

on chat:
	if player has permission "message.owner":
		cancel event
		broadcast "&4&l[Owner] &c%player%: &f%message%"
		set tab list name of player to "&4&l? &c%player%"
		stop
		
	if player has permission "message.default":
		cancel event
		broadcast "&2%player%: &f%message%"
		set tab list name of player to "&2%player%"
		stop
	
command /msg <player> <text>:
	description: Whisper another player
	usage: /msg <player> <message>
	aliases: /m
	trigger:
		set {chat.private.reply.%player%} to arg 1
		set {chat.private.reply.%arg 1%} to player
		send "&7(To %player%) %arg 2%" to player
		send "&7(From %player%) %arg 2%" to arg 1

command /reply <text>:	
	description: Reply command.
	usage: /reply <message>
	aliases: /r
	trigger:
		send "&7(To %{chat.private.reply.%player%}%) %arg 1%" to player
		send "&7(From %player%) %arg 1%" to {chat.private.reply.%player%}
		
